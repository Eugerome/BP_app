<!DOCTYPE html>
<html>
<head>
    <title>Records</title>
    <link rel="stylesheet" href="${request.static_url('bp_app:templates/style.css') }" />
</head>
<body>
    <div class="mainBody">
        <input type="button" class="button" id="displayAddRecord" value="Add Record"/>
        <h3>Records:</h3>
        <input type="button" onclick="CreateRecordTable()" value="Refresh Records"/>
        <div class="dataTable" id="showData"/>
    </div>
    <div class="blocker">
        <div class="popup">
            <input type="number" class="recordInput" id="bpUpper" placeholder="120" min="70" max="370"/>
            <input type="number" class="recordInput" id="bpLower" placeholder="70" min="20" max="370"/>
            <input type="datetime-local" class="recordInput" id="timestamp"/>
            <input type="text" class="recordInput" id="notes" placeholder="My Notes"/>
            <input type="button" onclick="AddRecord()" class="button" id="closeAddRecord" value="Add Record"/>
        </div>
    </div>
    <div style="display:none">
        <div class="toolBox">
            <div class="tooltipImg">
                <img class="editImg" src="./static/edit.png/"/>
                <span class="tooltipText">Edit Record</span>
            </div>
            <div class="tooltipImg">
                <img class="editImg" src="./static/delete.png/"/>
                <span class="tooltipText">Delete Record</span>
            </div>
        </div>
    </div>
</body>
<script src="${request.static_url('bp_app:templates/scripts.js')}"></script>
</html>
